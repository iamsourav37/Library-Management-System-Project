@model LibraryManagementSystem.Web.Models.ViewModel.Account.RegisterViewModel
@{
    ViewBag.Title = "Register Account";
}

<div class="d-flex align-items-center justify-content-center">

    <div class="border border-2 p-5 m-1" style="width:600px;">

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="mb-2">
                <p class="text-danger text-center h4">** @ViewBag.ErrorMessage</p>
            </div>

        }
        <div class="mt-2">
            <p class="text-black text-lg-center h1">Create New Admin/Member</p>
        </div>

        <form asp-controller="Account" asp-action="Register">
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input class="form-control" asp-for="Name">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Address1" class="form-label"></label>
                <input class="form-control" asp-for="Address1">
                <span class="text-danger" asp-validation-for="Address1"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input type="email" class="form-control" asp-for="Email">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input type="password" class="form-control" asp-for="Password">
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="mb-3">
                <select asp-for="SelectedRole" asp-items="Model?.RoleList" class="form-select form-select-sm">
                    <option value="" selected>Select the Role</option>
                </select>
                <span asp-validation-for="SelectedRole" class="text-danger"></span>

            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-dark mt-2 w-100">Submit</button>
            </div>

        </form>
    </div>


</div>